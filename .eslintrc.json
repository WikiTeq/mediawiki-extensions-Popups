{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/language/es6"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"jquery": true,
		"commonjs": true
	},
	"globals": {
		"mw": "readonly",
		"OO": "readonly"
	},
	"rules": {
		"no-use-before-define": "off"
	}
}
