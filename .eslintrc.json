{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/language/es6"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"jquery": true,
		"commonjs": true
	},
	"globals": {
		"mediaWiki": "readonly",
		"OO": "readonly"
	},
	"rules": {
		"no-prototype-builtins": "off",
		"valid-jsdoc": ["error", {
			"requireParamDescription": false,
			"requireReturnDescription": false,
			"preferType": {
				"Boolean": "boolean",
				"Number": "number",
				"object": "Object",
				"String": "string"
			}
		}],
		"no-use-before-define": "off",
		"template-curly-spacing": "off"
	}
}
